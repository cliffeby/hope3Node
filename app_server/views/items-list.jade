extends layout

//include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each category in hopeCategories
          .col-xs-12.list-group-item
            h4
              a(href="/categories/1/items")= category.name

              each item in category.items
                .col-xs-12.list-group-item
                   h5
                     a=item.name

    .col-xs-12.col-sm-4 
      p.lead= sidebar